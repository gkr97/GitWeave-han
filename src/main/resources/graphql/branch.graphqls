extend type RepositoryResponse {
    branchesConnection(
        first: Int
        after: String
        last: Int
        before: String
        sortBy: BranchSortBy = LAST_COMMIT_AT
        sortDirection: SortDirection = DESC
        keyword: String
        onlyMine: Boolean = false
    ): BranchResponseConnection!
}

enum BranchSortBy {
    LAST_COMMIT_AT
    NAME
}

type BranchEdge {
    cursor: String!
    node: BranchResponse!
}

type BranchResponseConnection {
    edges: [BranchEdge!]!
    pageInfo: PageInfo!
    totalCount: Int
}

type BranchResponse {
    name: String!
    qualifiedName: String!
    isDefault: Boolean!
    isProtected: Boolean!
    createdAt: String!
    headCommit: CommitResponse!
    creator: RepositoryUserResponse
}

type CommitResponse {
    hash: String!
    message: String!
    committedAt: String!
    author: RepositoryUserResponse!
}
