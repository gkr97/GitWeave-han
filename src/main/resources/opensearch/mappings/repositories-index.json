{
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 0
    },
    "analysis": {
      "filter": {
        "edge_ngram_filter": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 20
        }
      },
      "analyzer": {
        "edge_ngram_analyzer": {
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "edge_ngram_filter"
          ]
        },
        "standard_lower": {
          "tokenizer": "standard",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": { "type": "long" },
      "owner_id": { "type": "long" },
      "name": {
        "type": "text",
        "analyzer": "edge_ngram_analyzer",
        "search_analyzer": "standard_lower",
        "fields": {
          "keyword": { "type": "keyword", "ignore_above": 256 }
        }
      },
      "description": {
        "type": "text",
        "analyzer": "standard_lower"
      },
      "topics": {
        "type": "keyword"
      },
      "language": {
        "type": "keyword"
      },
      "default_branch": { "type": "keyword" },
      "stars": { "type": "integer" },
      "forks": { "type": "integer" },
      "watchers": { "type": "integer" },
      "issues": { "type": "integer" },
      "pull_requests": { "type": "integer" },
      "last_commit_at": {
        "type": "date",
        "format": "strict_date_time||epoch_millis"
      },
      "created_at": {
        "type": "date",
        "format": "strict_date_time||epoch_millis"
      },
      "updated_at": {
        "type": "date",
        "format": "strict_date_time||epoch_millis"
      },
      "suggest": {
        "type": "completion",
        "contexts": [
          {
            "name": "language",
            "type": "category"
          }
        ]
      }
    }
  }
}
